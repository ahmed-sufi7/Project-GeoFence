# ==============================================
# Smart Tourist Safety Environment Variables
# ==============================================

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL="your_supabase_project_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# AI Services
GOOGLE_API_KEY="your_google_gemini_api_key"           # Required for AI behavior analysis

# Geofencing and Location Services
TILE38_URL="redis://localhost:9851"                   # Tile38 geofencing server
REDIS_URL="redis://localhost:6379"                    # Redis for caching and sessions

# Backend Configuration
PORT="3001"                                           # Backend server port
NODE_ENV="development"                                # development | production
JWT_SECRET="your_jwt_secret_key"                      # JWT signing secret
BCRYPT_ROUNDS="12"                                    # Password hashing rounds

# Email Services (for notifications)
EMAIL_SERVICE_PROVIDER="sendgrid"                     # sendgrid | nodemailer
SENDGRID_API_KEY="your_sendgrid_api_key"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@example.com"
SMTP_PASS="your_email_password"

# Emergency Services Configuration
EMERGENCY_CONTACT_NUMBER="+1234567890"                # Default emergency contact
EMERGENCY_EMAIL="emergency@yourorganization.com"      # Emergency notification email

# Map and Location Services
OPENSTREETMAP_API_KEY="your_osm_api_key"             # Optional for enhanced mapping features
WEATHER_API_KEY="your_weather_api_key"               # For weather-based alerts

# BitChat P2P Configuration (for offline communication)
BITCHAT_NETWORK_ID="smart-tourist-safety"            # P2P network identifier
BITCHAT_ENCRYPTION_KEY="your_encryption_key"         # P2P message encryption

# ==============================================
# Task Master AI Configuration (existing)
# ==============================================

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...